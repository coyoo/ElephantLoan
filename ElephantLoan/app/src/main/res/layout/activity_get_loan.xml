<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/item_layout_title" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textColor="@color/default_black"
            android:text="@string/loan_amount"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/tv_loan_money2000"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/unclick_maincolor_bt_bg_small"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/main_color"
                android:text="3,000"/>
            <TextView
                android:id="@+id/tv_loan_money5000"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/maincolor_bt_bg_small"
                android:textColor="@color/white"
                android:text="5,000"/>
            <TextView
                android:id="@+id/tv_loan_money10000"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/unclick_maincolor_bt_bg_small"
                android:layout_marginLeft="15dp"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="10,000"/>
            <TextView
                android:id="@+id/tv_loan_money20000"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/unclick_maincolor_bt_bg_small"
                android:layout_marginLeft="15dp"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="20,000"/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textColor="@color/default_black"
            android:text="@string/loan_term_day"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/tv_loan_day7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/unclick_maincolor_bt_bg_small"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/main_color"
                android:text="7"/>
            <TextView
                android:id="@+id/tv_loan_day14"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/maincolor_bt_bg_small"
                android:textColor="@color/white"
                android:text="14"/>
            <TextView
                android:id="@+id/tv_loan_day30"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/unclick_maincolor_bt_bg_small"
                android:layout_marginLeft="15dp"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="30"/>
            <TextView
                android:id="@+id/tv_loan_day90"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/unclick_maincolor_bt_bg_small"
                android:layout_marginLeft="15dp"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="90"/>


        </LinearLayout>

    </LinearLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/list_line"
        />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/default_black"
                android:text="@string/loan_disbursal"/>

            <TextView
                android:id="@+id/tv_loan_disbursal_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/default_black"
                android:layout_alignParentRight="true"
                android:text="₹5000"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/list_line"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/default_black"
                android:text="@string/loan_interest"/>

            <TextView
                android:id="@+id/tv_loan_interest_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/default_black"
                android:layout_alignParentRight="true"
                android:text="₹35"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/list_line"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/default_black"
                android:text="@string/loan_repayment"/>

            <TextView
                android:id="@+id/tv_loan_sencurity_deposit_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/main_color"
                android:layout_toRightOf="@+id/text"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="(₹300)"/>

            <TextView
                android:id="@+id/tv_loan_repayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/default_black"
                android:layout_alignParentRight="true"
                android:text="₹4736"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/list_line"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/default_black"
                android:text="@string/loan_sencurity_deposit"/>

            <ImageView
                android:id="@+id/img_loan_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt1"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/remind"/>

            <TextView
                android:id="@+id/tv_loan_sencurity_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/main_color"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:text="₹300"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/list_line"
            />

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="@string/loan_remind_connect"
            android:textColor="@color/main_color"
            android:padding="15dp"
            android:background="@drawable/remind_txt_bg"
            />
        <LinearLayout
            android:id="@+id/layout_loan_borrow_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/maincolor_btn"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/btn_loan_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/loan_button_txt"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/img_loan_time" />
                <TextView
                    android:id="@+id/tv_Loan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="01:30:00"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>


    </ScrollView>
</LinearLayout>